
<component
	id="ClientInformation"
	title="Client Information"
	tooltip="Returns on first roundtrip some information from web client (browser)"
	icon="res/ClientInformation/ClientInformation.png"
	handlerType="sapui5"
	group="ScnCommunityUtils"
>

	<jsInclude>res/ClientInformation/ClientInformation.js</jsInclude>

	<property
		id="readLocation"
		type="boolean"
		title="Read the Location from Browser"
		group="Display"
		visible="true" />

	<property
		id="windowHeight"
		type="int"
		title="Height of the Window"
		group="Display"
		visible="false" />

	<property
		id="windowWidth"
		type="int"
		title="Width of the Window"
		group="Display"
		visible="false" />

	<property
		id="ownHeight"
		type="int"
		title="Height of the Component"
		group="Display"
		visible="false" />

	<property
		id="ownWidth"
		type="int"
		title="Width of the Component"
		group="Display"
		visible="false" />
		
	<property
		id="information"
		type="String"
		title="Technical Component for Client Information"
		group="Display"
		visible="false" />

	<property
		id="geoLocation"
		type="String"
		title="Technical Component for Client Geo Location"
		group="Display"
		visible="false" />

	<property
		id="onSizeChanged"
		type="ScriptText"
		title="Event for On Size Changed"
		group="Events" />
		
	<property
		id="onInformationAvailable"
		type="ScriptText"
		title="Event for On Information Available"
		group="Events" />
		
	<property
		id="onGeoAvailable"
		type="ScriptText"
		title="Event for On Geo Available"
		group="Events" />
		
	<initialization>
		<defaultValue property="WIDTH">auto</defaultValue>
		<defaultValue property="HEIGHT">auto</defaultValue>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">0</defaultValue>

		<defaultValue property="ownHeight"></defaultValue>
		<defaultValue property="ownWwidth"></defaultValue>
		<defaultValue property="windowHeight"></defaultValue>
		<defaultValue property="windowWidth"></defaultValue>
	</initialization>

</component>