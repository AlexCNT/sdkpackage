
<component
	id="UI5Table"
	title="UI5 Table 2.0"
	tooltip="UI5 Table - A simple table with rows and columns"
	icon="res/UI5Table/UI5Table.png"
	handlerType="sapui5"
	propertySheetPath="res/UI5Table/aps/PropertyPage.html"
	group="ScnCommunityDataBound"
	databound="true"
>
	
	<jsInclude>res/require_loader.js</jsInclude>
	<jsInclude>res/UI5Table/UI5TableLoader.js</jsInclude>
	<cssInclude>res/UI5Table/UI5Table.css</cssInclude>
	
	<property
		id="DAllowColumnReorder"
		type="boolean"
		title="Allow Reorder of Columns"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DAllowFilter"
		type="boolean"
		title="Allow Filter in Columns"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DAllowSelection"
		type="boolean"
		title="Allow Selection in the Table"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DAllowSort"
		type="boolean"
		title="Allow Sort in Columns"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DDataColWidths"
		type="String"
		title="Data Column Widths"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DDataProvisioner"
		type="String"
		title="Central Result Set with Data"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DEmptyDataValue"
		type="String"
		title="Empty Value For Data Cell"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DEmptyHeaderValue"
		type="String"
		title="Empty Value For Header Cell"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DFixedHeader"
		type="boolean"
		title="Fix Header Rows"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DFormattingCondition"
		type="String"
		title="(non-stable) Formatting Condition"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DFormattingOperator"
		type="String"
		title="(non-stable) Formatting Operator"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DHeaderColWidth"
		type="int"
		title="Header Column Width in px"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DIgnoreResults"
		type="boolean"
		title="Ignore Results"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DNavigationMode"
		type="String"
		title="Navigation Mode"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DRowHeight"
		type="int"
		title="Row Height in px"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DSelection"
		type="String"
		title="Selection Content for Cell"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="DVisibleRowCount"
		type="int"
		title="Visible Row Count"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="data"
		type="ResultSet"
		title="Data"
		group="DataBinding"
		visible="false">

		<option name="includeFormattedData" value="true"/>
		<option name="includeData" value="true"/>
	</property>
	<property
		id="onCellSelected"
		type="ScriptText"
		title="On Cell Selected"
		group="Events"
		visible="true">

	</property>
	<property
		id="onRowSelected"
		type="ScriptText"
		title="On Row Selected"
		group="Events"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">800</defaultValue>
		<defaultValue property="HEIGHT">600</defaultValue>
		
		<defaultValue property="DAllowColumnReorder"><![CDATA[true]]></defaultValue>
		<defaultValue property="DAllowFilter"><![CDATA[true]]></defaultValue>
		<defaultValue property="DAllowSelection"><![CDATA[false]]></defaultValue>
		<defaultValue property="DAllowSort"><![CDATA[true]]></defaultValue>
		<defaultValue property="DDataColWidths"><![CDATA[[]]]></defaultValue>
		<defaultValue property="DDataProvisioner"><![CDATA[]]></defaultValue>
		<defaultValue property="DEmptyDataValue"><![CDATA[]]></defaultValue>
		<defaultValue property="DEmptyHeaderValue"><![CDATA[]]></defaultValue>
		<defaultValue property="DFixedHeader"><![CDATA[true]]></defaultValue>
		<defaultValue property="DFormattingCondition"><![CDATA[]]></defaultValue>
		<defaultValue property="DFormattingOperator"><![CDATA[UseFirst]]></defaultValue>
		<defaultValue property="DHeaderColWidth"><![CDATA[200]]></defaultValue>
		<defaultValue property="DIgnoreResults"><![CDATA[true]]></defaultValue>
		<defaultValue property="DNavigationMode"><![CDATA[Paginator]]></defaultValue>
		<defaultValue property="DRowHeight"><![CDATA[20]]></defaultValue>
		<defaultValue property="DSelection"><![CDATA[]]></defaultValue>
		<defaultValue property="DVisibleRowCount"><![CDATA[12]]></defaultValue>
		<defaultValue property="data"><![CDATA[null]]></defaultValue>
		<defaultValue property="onCellSelected"><![CDATA[]]></defaultValue>
		<defaultValue property="onRowSelected"><![CDATA[]]></defaultValue>

	</initialization>

</component>
