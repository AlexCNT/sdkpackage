
<component
	id="Accordion"
	title="Accordion 2.0"
	tooltip="Accordion - Dynamic List of Entries"
	icon="res/Accordion/Accordion.png"
	handlerType="sapui5"
	propertySheetPath="res/Accordion/aps/PropertyPage.html"
	group="ScnCommunityBasics"
	databound="false"
>
	
	<jsInclude>res/require_loader.js</jsInclude>
	<jsInclude>res/Accordion/AccordionLoader.js</jsInclude>
	<cssInclude>res/Accordion/Accordion.css</cssInclude>
	
	<property
		id="cleanAll"
		type="boolean"
		title="Clean All Nodes"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="defaultImage"
		type="Url"
		title="Default Image"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="elementsContent"
		type="String"
		title="Elements"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="expandedKey"
		type="String"
		title="Expaned Key"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="imageSize"
		type="String"
		title="Size of the Image"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="maxSectionHeight"
		type="int"
		title="Max Height for Section"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="memberDisplay"
		type="String"
		title="Member Display"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onFirstExpand"
		type="ScriptText"
		title="On First Expand"
		group="Events"
		visible="true">

	</property>
	<property
		id="onSelectionChanged"
		type="ScriptText"
		title="On Selection Changed"
		group="Events"
		visible="true">

	</property>
	<property
		id="selectedKey"
		type="String"
		title="Selected Key"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="supportedContentNotation"
		type="String"
		title="Supported Content Notation"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="withImage"
		type="boolean"
		title="Use Images"
		group="Display"
		bindable="true"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">260</defaultValue>
		<defaultValue property="HEIGHT">600</defaultValue>
		
		<defaultValue property="cleanAll">false</defaultValue>
		<defaultValue property="defaultImage"></defaultValue>
		<defaultValue property="elementsContent">[]</defaultValue>
		<defaultValue property="expandedKey"></defaultValue>
		<defaultValue property="imageSize">16px</defaultValue>
		<defaultValue property="maxSectionHeight">200</defaultValue>
		<defaultValue property="memberDisplay">text</defaultValue>
		<defaultValue property="onFirstExpand"></defaultValue>
		<defaultValue property="onSelectionChanged"></defaultValue>
		<defaultValue property="selectedKey">-get</defaultValue>
		<defaultValue property="supportedContentNotation">PARENT_CHILD_TEXT_URL</defaultValue>
		<defaultValue property="withImage">true</defaultValue>

	</initialization>

</component>
