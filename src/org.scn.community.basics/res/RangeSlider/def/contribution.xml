
<component
	id="RangeSlider"
	title="Range Slider"
	handlerType="sapui5"
	icon="res/RangeSlider/RangeSlider.png"
	group="ScnCommunityBasics"
>

	<jsInclude>res/require_loader.js</jsInclude>
	<jsInclude>res/common_basics.js</jsInclude>
	<jsInclude>res/RangeSlider/RangeSlider.js</jsInclude>
	
	<cssInclude>res/RangeSlider/RangeSlider.css</cssInclude>
	
	<property
		id="min"
		title="Minimum Value"
		group="Display"
		type="float" />
	<property
		id="max"
		title="Maximum Value"
		group="Display"
		type="float" />
	<property
		id="value"
		title="First Value"
		group="Display"
		type="float" />
	<property
		id="value2"
		title="Second Value"
		group="Display"
		type="float" />
	<property
		id="liveValue"
		title="First Value (Live)"
		type="float" 
		group="Display"
		visible="false" />
	<property
		id="liveValue2"
		title="Second Value (Live)"
		type="float" 
		group="Display"
		visible="false" />
	<property
		id="totalUnits"
		title="Total Units"
		group="Display"
		type="int" />
	<property
		id="stepLabels"
		title="Step Labels"
		group="Display"
		type="boolean" />
	<property
		id="vertical"
		title="Change to Vertical Orientation"
		group="Display"
		type="boolean" />
	<property
		id="smallStepWidth"
		title="Small Step Width"
		group="Display"
		type="float" />
	<property
		id="onChange"
		title="On Change"
		type="ScriptText"
		group="Events" />
	<property
		id="DLiveChangeActive"
		title="Activate Live Change Event (prototype)"
		group="Display"
		type="boolean" />
	<property
		id="onLiveChange"
		title="On Live Change"
		type="ScriptText"
		group="Events" />
	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">300</defaultValue>
		<defaultValue property="HEIGHT">30</defaultValue>
		<defaultValue property="min">0.0</defaultValue>
		<defaultValue property="max">100.0</defaultValue>
		<defaultValue property="value">0.0</defaultValue>
		<defaultValue property="value2">100.0</defaultValue>
		<defaultValue property="totalUnits">10</defaultValue>
		<defaultValue property="vertical">false</defaultValue>
		<defaultValue property="smallStepWidth">10</defaultValue>
		<defaultValue property="DLiveChangeActive">false</defaultValue>
	</initialization>
</component>