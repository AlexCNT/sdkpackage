
<!-- List Selector -->
	<component id="ListSelector" title="List Selector" 
		handlerType="div"
		icon="res/ListSelector/ListSelector.png"
		propertySheetPath="res/ListSelector/aps/ListSelectorPropertyPage.html"
		group="ScnCommunityBasics">

		<jsInclude>res/require_loader.js</jsInclude>
	  	<jsInclude>res/common_basics.js</jsInclude>
		<jsInclude>res/ListSelector/ListSelector.js</jsInclude>
	  	<cssInclude>res/ListSelector/ListSelector.css</cssInclude>
	  	<property group="Display" id="titles" type="String" title="Titles"/>
	  	<property group="Display" id="spriteIDs" type="String" title="Sprite IDs (Optional)"/>
	  	<property group="Display" id="visibilities" type="String" title="Visibilities (Optional)"/>
	  	<property group="Display" id="fixedWidth" type="String" title="Fixed Width (-1 for auto)"/>
	  	<property group="Display" id="spriteSheet" type="Url" title="Icon Sprite Sheet (Optional)"/>
	  	<property group="Display" id="labelClicked" type="String" title="Selected Label"/>
	  	<property group="Display" id="labelUnselect" type="boolean" title="Unselect Label" visible="false"/>
	  	<property id="onclick" type="ScriptText" title="On Click..." group="Events"/>
	  	<property group="Display" id="labelPlacement" type="String" title="Label Placement (Relative to Icon)">
	  		<possibleValue>After</possibleValue>
	  		<possibleValue>Before</possibleValue>
	  	</property>
	  	<property group="Display" id="labelOrientation" type="String" title="Label Orientation">
	  		<possibleValue>horizontal</possibleValue>
	  		<possibleValue>vertical</possibleValue>
	  	</property>
	  	<property group="Display" id="textAlign" type="String" title="Text Alignment">
	  		<possibleValue>left</possibleValue>
	  		<possibleValue>center</possibleValue>
	  		<possibleValue>right</possibleValue>
	  	</property>
	  	<property group="Display" id="verticalAlign" type="String" title="Vertical Alignment">
	  		<possibleValue>top</possibleValue>
	  		<possibleValue>middle</possibleValue>
	  		<possibleValue>bottom</possibleValue>
	  	</property>
	  	
	  	<property group="Display" id="spriteSheetPerRow" type="int" title="Icons Sprites Per Row"/>
	  	<property group="Display" id="iconWidth" type="int" title="Icon Width (px)"/>
	  	<property group="Display" id="iconHeight" type="int" title="Icon Height (px)"/>
	  	<initialization>
	  		<defaultValue property="titles">Facebook,YouTube,Twitter,SAP</defaultValue>
	  		<defaultValue property="labelPlacement">After</defaultValue>
	  		<defaultValue property="labelOrientation">vertical</defaultValue>
	  		<defaultValue property="verticalAlign">top</defaultValue>
	  		<defaultValue property="textAlign">center</defaultValue>
	  		<defaultValue property="fixedWidth">-1</defaultValue>
	  	</initialization>
	  </component>