
<component
	id="KpiView"
	title="Kpi View 2.0"
	tooltip="Kpi View"
	icon="res/KpiView/KpiView.png"
	handlerType="sapui5"
	propertySheetPath="res/KpiView/aps/PropertyPage.html"
	group="ScnCommunityBasics"
	databound="true"
>
	
	<jsInclude>res/require_loader.js</jsInclude>
	<jsInclude>res/KpiView/KpiViewLoader.js</jsInclude>
	<cssInclude>res/KpiView/KpiView.css</cssInclude>
	
	<property
		id="data"
		type="ResultCell"
		title="Data Value"
		group="Data"
		visible="true"
		bindable="true">

		<option name="includeFormattedData" value="true"/>
		<option name="includeData" value="true"/>
		<option name="includeMetadata" value="true"/>
	</property>
	<property
		id="footerCssClass"
		type="String"
		title="Footer CSS Class"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="footerHAlign"
		type="String"
		title="Footer Horizontal Alignment"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="footerText"
		type="String"
		title="Footer"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="headerCssClass"
		type="String"
		title="Header CSS Class"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="headerHAlign"
		type="String"
		title="Header Horizontal Alignment"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="headerText"
		type="String"
		title="Header"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="image"
		type="Url"
		title="Url For The Image"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="imageSize"
		type="String"
		title="Size Of The Image"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="linkText"
		type="String"
		title="Text For The Link"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="linkTooltip"
		type="String"
		title="Tooltip For The Link"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onClick"
		type="ScriptText"
		title="On Click"
		group="Events"
		visible="true">

	</property>
	<property
		id="onLinkClick"
		type="ScriptText"
		title="On Click"
		group="Events"
		visible="true">

	</property>
	<property
		id="titleCssClass"
		type="String"
		title="Title CSS Class"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="titleText"
		type="String"
		title="Title"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueCssClass"
		type="String"
		title="Value CSS Class"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueDecimalPlaces"
		type="String"
		title="Value Decimal Places"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueFloat"
		type="String"
		title="Value As Float"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueHAlign"
		type="String"
		title="Value Horizontal Alignment"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valuePrefixCssClass"
		type="String"
		title="Value Prefix CSS Class"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valuePrefixText"
		type="String"
		title="Value Prefix"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueSuffixCssClass"
		type="String"
		title="Value Suffix CSS Class"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueSuffixText"
		type="String"
		title="Value Suffix"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="valueText"
		type="String"
		title="Value"
		group="Display"
		bindable="true"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">220</defaultValue>
		<defaultValue property="HEIGHT">190</defaultValue>
		
		<defaultValue property="data"></defaultValue>
		<defaultValue property="footerCssClass"></defaultValue>
		<defaultValue property="footerHAlign">Left</defaultValue>
		<defaultValue property="footerText">Footer</defaultValue>
		<defaultValue property="headerCssClass"></defaultValue>
		<defaultValue property="headerHAlign">Left</defaultValue>
		<defaultValue property="headerText">Header</defaultValue>
		<defaultValue property="image"></defaultValue>
		<defaultValue property="imageSize">Size_16px</defaultValue>
		<defaultValue property="linkText"></defaultValue>
		<defaultValue property="linkTooltip"></defaultValue>
		<defaultValue property="onClick"></defaultValue>
		<defaultValue property="onLinkClick"></defaultValue>
		<defaultValue property="titleCssClass"></defaultValue>
		<defaultValue property="titleText">Title</defaultValue>
		<defaultValue property="valueCssClass"></defaultValue>
		<defaultValue property="valueDecimalPlaces">D0</defaultValue>
		<defaultValue property="valueFloat"></defaultValue>
		<defaultValue property="valueHAlign">Left</defaultValue>
		<defaultValue property="valuePrefixCssClass"></defaultValue>
		<defaultValue property="valuePrefixText"></defaultValue>
		<defaultValue property="valueSuffixCssClass"></defaultValue>
		<defaultValue property="valueSuffixText"> M$</defaultValue>
		<defaultValue property="valueText">Value</defaultValue>

	</initialization>

</component>
