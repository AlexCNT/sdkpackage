
<component
	id="WorldTime"
	title="WorldTime"
	icon="res/WorldTime/WorldTime.png"
	handlerType="div"
	group="ScnCommunityBasics">
	
	<jsInclude>res/require_loader.js</jsInclude>
	<jsInclude>res/common_basics.js</jsInclude>
	<jsInclude>res/WorldTime/WorldTime.js</jsInclude>
	<property group="Display" type="String" title="UTC Offset" id="utcoffset">
	</property>
	<property group="Display" type="String" title="Locale" id="locale">
		<possibleValue>en-US</possibleValue>
		<possibleValue>de-DE</possibleValue>
		<possibleValue>default</possibleValue>
	</property>
	<property group="Display" type="boolean" title="Show Timezone name" id="showtimezonename">
	</property>
	<property group="Display" type="boolean" title="Consider Daylight Saving" id="daylightsaving">
	</property>
	<property group="Display" type="String" title="Date Format" id="dateformat">
		<possibleValue>dd.mm.yy</possibleValue>
		<possibleValue>dd.mm</possibleValue>
		<possibleValue>mm.yy</possibleValue>
		<possibleValue>hide</possibleValue>
		<possibleValue>default</possibleValue>
	</property>
	<property group="Display" type="String" title="Time Format" id="timeformat">
		<possibleValue>hh:mm:ss</possibleValue>
		<possibleValue>hh:mm</possibleValue>
		<possibleValue>hide</possibleValue>
		<possibleValue>default</possibleValue>
	</property>
	<property group="Display" type="int" title="Update Interval (in ms)" id="interval">
	</property>
	<initialization>
		<defaultValue property="WIDTH">150</defaultValue>
		<defaultValue property="HEIGHT">40</defaultValue>
		<defaultValue property="utcoffset">0</defaultValue>
		<defaultValue property="locale">de-DE</defaultValue>
		<defaultValue property="dateformat">dd.mm.yy</defaultValue>
		<defaultValue property="timeformat">hh:mm:ss</defaultValue>
		<defaultValue property="showtimezonename">true</defaultValue>
		<defaultValue property="daylightsaving">true</defaultValue>
		<defaultValue property="interval">5000</defaultValue>
	</initialization>

</component>
