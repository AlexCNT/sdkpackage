
<component
	id="SegmentedButton"
	title="Segmented Button 2.0"
	tooltip="Segmented Button"
	icon="res/SegmentedButton/SegmentedButton.png"
	handlerType="sapui5"
	propertySheetPath="res/SegmentedButton/aps/PropertyPage.html"
	group="ScnCommunityBasics"
	databound="false"
>
	
	<jsInclude>res/require_loader.js</jsInclude>
	<jsInclude>res/SegmentedButton/SegmentedButtonLoader.js</jsInclude>
	<cssInclude>res/SegmentedButton/SegmentedButton.css</cssInclude>
	
	<property
		id="DCleanAll"
		type="boolean"
		title="Clean All Nodes"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="DDefaultImage"
		type="Url"
		title="Url For Default Image"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DElementsContent"
		type="String"
		title="Buttons"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DImageSize"
		type="String"
		title="Size Of The Image"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DPressedButtonKey"
		type="String"
		title="Technical Property For Pressed Button Key"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="DPressedItemKey"
		type="String"
		title="Technical Property For Pressed Item Key"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="DSelectedKeys"
		type="String"
		title="Technical Property For Selected Keys"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="DSelectionType"
		type="String"
		title="Selection Type"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="DWithImages"
		type="boolean"
		title="Use Images"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onButtonPressed"
		type="ScriptText"
		title="Event For On Button Pressed"
		group="Events"
		visible="true">

	</property>
	<property
		id="onItemPressed"
		type="ScriptText"
		title="Event For On Item Pressed"
		group="Events"
		visible="true">

	</property>
	<property
		id="onSelected"
		type="ScriptText"
		title="Event For On Selection Changed"
		group="Events"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">300</defaultValue>
		<defaultValue property="HEIGHT">22</defaultValue>
		
		<defaultValue property="DCleanAll">false</defaultValue>
		<defaultValue property="DDefaultImage"></defaultValue>
		<defaultValue property="DElementsContent">[]</defaultValue>
		<defaultValue property="DImageSize">Size_16px</defaultValue>
		<defaultValue property="DPressedButtonKey"></defaultValue>
		<defaultValue property="DPressedItemKey"></defaultValue>
		<defaultValue property="DSelectedKeys">[]</defaultValue>
		<defaultValue property="DSelectionType">Single</defaultValue>
		<defaultValue property="DWithImages"></defaultValue>
		<defaultValue property="onButtonPressed"></defaultValue>
		<defaultValue property="onItemPressed"></defaultValue>
		<defaultValue property="onSelected"></defaultValue>

	</initialization>

</component>
