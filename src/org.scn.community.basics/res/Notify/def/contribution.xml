
<component id="Notify"
	title="Notify"
	icon="res/Notify/Notify.png"
	handlerType="div"
	group="ScnCommunityBasics"
  	tooltip="Notify - Leandro Cardoso" >
		<jsInclude>res/require_loader.js</jsInclude>
	  	<jsInclude>res/common_basics.js</jsInclude>
		<jsInclude>res/Notify/Notify.js</jsInclude>
    	<jsInclude>os/noty/packaged/jquery.noty.packaged.js</jsInclude>
	  	<property group="Display" type="String" title="msgtext" id="msgtext" visible="false" />
		<property group="Display" type="String" title="shownote" id="shownote" visible="false" />
		<property group="Display" type="String" title="msgtype" id="msgtype" visible="false" />
		<property group="Display" type="int" title="Delay(Seconds)" id="delay"/>
		<property group="Display" type="String" title="Layout" id="layout">
		    <possibleValue>top</possibleValue>
		       <possibleValue>topCenter</possibleValue>
		       <possibleValue>topLeft</possibleValue>
		       <possibleValue>topRight</possibleValue>
		       <possibleValue>center</possibleValue>
		       <possibleValue>centerLeft</possibleValue>
		       <possibleValue>centerRight</possibleValue>
		       <possibleValue>bottom</possibleValue>
		       <possibleValue>bottomCenter</possibleValue>
		       <possibleValue>bottomLeft</possibleValue>
		       <possibleValue>bottomRight</possibleValue>
			</property>
		<property group="Display" type="String" title="Modal" id="modal"> 
	       <possibleValue>true</possibleValue>
	       <possibleValue>false</possibleValue>
		</property>
	   <initialization>
	     <defaultValue property="WIDTH">100</defaultValue>
	     <defaultValue property="HEIGHT">100</defaultValue>  
	     <defaultValue property="layout">center</defaultValue>
	     <defaultValue property="modal">false</defaultValue> 
	     <defaultValue property="delay">3</defaultValue> 
	   </initialization>
	  </component>